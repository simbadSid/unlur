<RelativeLayout
	xmlns:android						= "http://schemas.android.com/apk/res/android"
	android:layout_width				= "fill_parent"
	android:layout_height				= "fill_parent"
	android:background					= "@color/defaultBackgroundColor">
																	<!-- Center Images -->
   	<ImageView
		android:id						= "@+id/mainImage"
		android:layout_width			= "wrap_content"
		android:layout_height			= "wrap_content"
		android:layout_centerInParent	= "true"
		android:src						= "@drawable/main_image"
		android:contentDescription		= "@string/mainImageDescription"/>
																		<!-- Left Layout -->
	<LinearLayout
		android:id						= "@+id/leftLayout"
		android:layout_width			= "wrap_content"
		android:layout_height			= "wrap_content"
		android:layout_centerVertical	= "true"
		android:layout_alignParentStart	= "true"
		android:layout_alignParentLeft	= "true"
		android:layout_marginStart		= "15dip"
		android:layout_marginLeft		= "15dip"
		android:orientation				= "vertical">
		<Button
			android:id					= "@+id/buttonNewMain"
			android:layout_width		= "fill_parent"
			android:layout_height		= "wrap_content"
			android:text				= "@string/buttonNewMain"
			style						= "@style/mainButton"/>
		<Button
			android:id					= "@+id/buttonLoadMain"
			android:layout_width		= "fill_parent"
			android:layout_height		= "wrap_content"
			android:layout_marginTop	= "15dip"
			android:text				= "@string/buttonLoadMain"
			style						= "@style/mainButton"/>
		<Button
		    android:id					= "@+id/buttonRulesMain"
		    style						= "@style/mainButton"
		    android:layout_width		= "fill_parent"
		    android:layout_height		= "wrap_content"
			android:layout_marginTop	= "15dip"
		    android:text				= "@string/buttonRulesMain" />
	</LinearLayout>
																		<!-- Right Layout -->
	<LinearLayout
		android:id						= "@+id/rightLayout"
		android:layout_width			= "wrap_content"
		android:layout_height			= "wrap_content"
		android:layout_centerVertical	= "true"
		android:layout_alignParentEnd	= "true"
		android:layout_alignParentRight	= "true"
		android:layout_marginEnd		= "15dip"
		android:layout_marginRight		= "15dip"
		android:orientation				= "vertical">
	    <Button
			android:id					= "@+id/buttonParametersMain"
			android:layout_width		= "fill_parent"
			android:layout_height		= "wrap_content"
			android:text				= "@string/buttonParametersMain"
			style						= "@style/mainButton"/>
	    <Button
			android:id					= "@+id/buttonContactUsMain"
			android:layout_width		= "fill_parent"
			android:layout_height		= "wrap_content"
			android:layout_marginTop	= "15dip"
			android:text				= "@string/buttonContactUsMain"
			style						= "@style/mainButton"/>
	    <Button
			android:id					= "@+id/buttonExitMain"
			android:layout_width		= "fill_parent"
			android:layout_height		= "wrap_content"
			android:layout_marginTop	= "15dip"
			android:text				= "@string/buttonExitMain"
			style						= "@style/mainButton"/>
	</LinearLayout>
</RelativeLayout>